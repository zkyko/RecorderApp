{
  "name": "qa-studio",
  "version": "1.5.0",
  "description": "D365 QA Studio - Playwright-Powered Test Recorder, Locator Cleaner, Runner, and Debugger",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc",
    "build:ui": "cd src/ui && npm run build",
    "build:all": "npm run build && npm run build:ui",
    "build:app": "npm run build:all",
    "prebuild": "npm run build:clean && mkdir -p runtime/reporters && cp dist/main/services/reporters/ErrorGrabber.js runtime/reporters/ || echo 'ErrorGrabber.js not found, skipping copy'",
    "build:clean": "rm -rf runtime/reporters",
    "build:win": "npm run build:app && npm run prebuild && electron-builder --win --x64",
    "build:win:arm64": "npm run build:app && npm run prebuild && electron-builder --win --arm64",
    "build:mac": "npm run build:app && npm run prebuild && electron-builder --mac",
    "dist:mac": "npm run build:app && npm run prebuild && electron-builder --mac --dir",
    "dist:win:arm64": "npm run build:app && npm run prebuild && electron-builder --win --arm64 --dir",
    "package:releases": "bash scripts/package-releases.sh",
    "release:github": "bash scripts/create-github-release.sh",
    "start": "electron dist/main/index.js",
    "dev": "tsc && npm run build:ui && electron dist/main/index.js",
    "dev:electron": "tsc && electron dist/main/index.js",
    "dev:ui": "cd src/ui && npm run dev",
    "dev:watch": "tsc --watch",
    "install:all": "npm install && cd src/ui && npm install",
    "dist": "npm run build:app && electron-builder",
    "dist:win": "npm run build:app && electron-builder --win --dir",
    "dist:win:portable": "npm run build:app && electron-builder --win portable",
    "dist:win:safe": "powershell -ExecutionPolicy Bypass -File scripts/clean-release.ps1 && npm run build:app && electron-builder --win --dir",
    "package:portable": "powershell -ExecutionPolicy Bypass -File scripts/package-portable.ps1",
    "release": "powershell -ExecutionPolicy Bypass -File scripts/create-release.ps1",
    "release:skip-build": "powershell -ExecutionPolicy Bypass -File scripts/create-release.ps1 -SkipBuild",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug"
  },
  "keywords": [
    "playwright",
    "d365",
    "pom",
    "test-automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mantine/core": "^8.3.9",
    "@mantine/hooks": "^8.3.9",
    "@mantine/notifications": "^8.3.9",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.555.0",
    "playwright": "^1.40.0",
    "react-router-dom": "^7.9.6",
    "ts-morph": "^27.0.2",
    "uuid": "^13.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/electron-store": "^1.3.1",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "browserstack-node-sdk": "^1.46.4",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.fourhands.qa.studio",
    "productName": "QA Studio",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/playwright/**",
      "node_modules/@playwright/**"
    ],
    "extraResources": [
      {
        "from": "runtime/",
        "to": "runtime/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg",
        "dir"
      ],
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "title": "QA Studio ${version}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
